{% extends 'back/Dashboard.html.twig' %}

{% block title %}Ajouter une Demande{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Ajouter une nouvelle demande</h1>

        {# Affichage du message de succ√®s ou d'erreur #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-3">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Formulaire de demande #}
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success mt-3">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
